{
  "name": "@bloc-state/react-bloc",
  "version": "4.1.1",
  "description": "React adapter for bloc-state.",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build-fast": "pnpm exec tsc --noEmit && tsup src/index.ts --format cjs,esm",
    "build": "pnpm run build-fast",
    "test": "jest --verbose --runInBand --coverage",
    "test:silent": "npm run test -- --silent",
    "test:dev": "npm run test -- --watch",
    "prepublishOnly": "pnpm run build",
    "prepare": "husky install"
  },
  "license": "MIT",
  "devDependencies": {
    "@bloc-state/bloc": "^2.1.0",
    "@bloc-state/state": "^2.2.1",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@egoist/prettier-config": "1.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@swc/core": "^1.3.15",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.3",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "awilix": "^8.0.0",
    "husky": "^7.0.4",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^12.5.0",
    "prettier": "2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "rxjs": "^7.5.7",
    "semantic-release": "^19.0.5",
    "ts-jest": "^29.0.3",
    "tsup": "^6.4.0",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  },
  "peerDependencies": {
    "@bloc-state/bloc": "^2.1.0",
    "@bloc-state/state": "^2.2.1",
    "@types/react": "^18.0",
    "@types/react-dom": "^18.0",
    "awilix": "^8.0.0",
    "react": "^18.0",
    "react-dom": "^18.0",
    "rxjs": "^7.5.4"
  },
  "dependencies": {
    "observable-hooks": "^4.2.1"
  }
}
